<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>welcome.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>welcome</servlet-name>
        <servlet-class>by.gstu.airline.servlet.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>signIn</servlet-name>
        <servlet-class>by.gstu.airline.servlet.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signIn</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>administrator</servlet-name>
        <servlet-class>by.gstu.airline.servlet.AdministratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>administrator</servlet-name>
        <url-pattern>/administrator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightEdit</servlet-name>
        <servlet-class>by.gstu.airline.servlet.FlightEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightEdit</servlet-name>
        <url-pattern>/administrator/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightSave</servlet-name>
        <servlet-class>by.gstu.airline.servlet.FlightSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightSave</servlet-name>
        <url-pattern>/administrator/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightDelete</servlet-name>
        <servlet-class>by.gstu.airline.servlet.FlightDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightDelete</servlet-name>
        <url-pattern>/flight/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>by.gstu.airline.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/dispatcher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewEdit</servlet-name>
        <servlet-class>by.gstu.airline.servlet.CrewEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewEdit</servlet-name>
        <url-pattern>/dispatcher/crew/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewSave</servlet-name>
        <servlet-class>by.gstu.airline.servlet.CrewSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewSave</servlet-name>
        <url-pattern>/dispatcher/crew/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewDelete</servlet-name>
        <servlet-class>by.gstu.airline.servlet.CrewDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewDelete</servlet-name>
        <url-pattern>/crew/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employeeAdd</servlet-name>
        <servlet-class>by.gstu.airline.servlet.EmployeeAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employeeAdd</servlet-name>
        <url-pattern>/dispatcher/crew/employee/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employeeDelete</servlet-name>
        <servlet-class>by.gstu.airline.servlet.EmployeeDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employeeDelete</servlet-name>
        <url-pattern>/dispatcher/crew/employee/delete</url-pattern>
    </servlet-mapping>

</web-app>